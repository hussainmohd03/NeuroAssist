generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  fullName           String
  email              String    @unique
  passwordDigest     String
  Institution        String
  nhra               Int       @unique
  emailVerified      Boolean   @default(false)
  verificationToken  String?   @unique
  verificationExpiry DateTime?
  resetToken         String?   @unique
  resetTokenExpiry   DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  studies       Study[]
  notifications Notification[]

  @@index([email])
  @@map("users")
}

enum StudyStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model Study {
  id        String      @id @default(uuid())
  doctor    String
  patientId String
  status    StudyStatus @default(PENDING)
  metadata  Json?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user   User    @relation(fields: [doctor], references: [id], onDelete: Cascade, onUpdate: Cascade)
  report Report?
  images Image?

  @@index([doctor])
  @@map("studies")
}

model Report {
  id        String   @id @default(uuid())
  studyId   String   @unique
  filePath  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  study Study @relation(fields: [studyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([studyId])
  @@map("reports")
}

model Image {
  id               String   @id @default(uuid())
  studyId          String   @unique
  filePath         String
  segmentationPath String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  study Study @relation(fields: [studyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([studyId])
  @@map("images")
}

enum NotificationType {
  profile_updated
  study_created
  report_ready
  study_status_changed
  data_cleared
}

enum NotificationSeverity {
  info
  warning
  critical
  success
  error
}

model Notification {
  id        String               @id @default(uuid())
  userId    String
  message   String
  type      NotificationType
  metaData  Json?
  deleted   Boolean?             @default(false)
  severity  NotificationSeverity
  isRead    Boolean              @default(false)
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
  @@map("notifications")
}
